# Example encrypted secret for staging environment
# This is a PLAINTEXT example - DO NOT use as-is!
#
# To create your own encrypted secret:
# 1. Copy this file: cp backend-secrets.yaml.example backend-secrets.yaml
# 2. Edit with SOPS: sops backend-secrets.yaml
# 3. Update values in your editor
# 4. Save - SOPS will automatically encrypt
# 5. Commit: git add backend-secrets.yaml && git commit && git push

apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
  namespace: staging
type: Opaque
stringData:
  # Database connection
  database-url: "postgresql://backend:changeme@postgres.staging.svc.cluster.local:5432/backend"
  database-password: "changeme"

  # API keys
  api-key: "staging-api-key-change-me"

  # JWT signing
  jwt-secret: "staging-jwt-secret-change-in-production"

  # External services
  redis-password: "staging-redis-password"
  smtp-password: "staging-smtp-password"
